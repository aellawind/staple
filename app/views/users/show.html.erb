<%= stylesheet_link_tag "user-profile" %>

<%= javascript_tag do%>
  userID = <%= current_user.id %>;
<%end%>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

<nav> 
  <div id="pageTitle"> Staple </div>
  <div id="logoutTitle"> <%= link_to 'logout', logout_path, :method => :delete%>
</div>
</nav>

<div class="sideBar">
  <div class="selectedRecipesTitle">My Recipes</div>
  <div class="selectedRecipes">
    <% current_user.recipes.each do |recipe| %>
      <div data-recipe-url=<%=recipe.recipe_url%> data-id=<%=recipe.yummly_id%> class='selectedRecipeView'> 
        <div class="selectedRecipeName">
          <%=recipe.name%>
        </div>
        <div class="deleteRecipe">x</div>
      </div>
    <% end %>
  </div>
  <div class="makeGroceryList">Create Grocery List</div>
</div>


<div class="mainPage">
  <div class="search">
    <input type="text" name="search", class="search-input" placeholder="Search recipes">
    <div class="search-button"></div>
  </div>
  <div class="recipeGrid"></div>
</div>
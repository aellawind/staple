<div id="background-blur"></div>
<div class="signup_wrapper">
  <h1 id="home_title">Staple</h1>
  <h2 id="home_subtitle">An easy way to create grocery lists.</h2>
  <div class="form-wrapper">
    <%= form_for(:session, url: login_path, html: {class: 'user-form'}) do |f| %>
      <%= f.email_field :email, placeholder: "Email", class: "form-input"%> <br>

      <%= f.password_field :password, placeholder: "Password", class: "form-input"%> <br>

      <%= f.submit "Log in", class: "submit-button"%>
  <p> New user? Sign up <%= link_to "here.", signup_path%></p>
  <% end %>
</div>

